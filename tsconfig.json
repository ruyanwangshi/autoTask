{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "ES2016", "ES2015", "ESNext", "ES2020"],
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "rootDir": "./src",
      "baseUrl": ".",
      "outDir": "./lib",
      "strict": true,
      "resolveJsonModule": true,
      "paths": {
        "@/*":["./src/*"]
      },
    },
    "include": ["./src/*.ts"],
    "exclude": ["./dist"]
  }
  